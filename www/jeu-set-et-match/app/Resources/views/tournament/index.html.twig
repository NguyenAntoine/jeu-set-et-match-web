{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/bundles/app/css/style.css') }}"/>
{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Tournois
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                    <tr>
                        <th>Nom du tournoi</th>
                        <th>Location</th>
                        <th>Surface du terrain</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tournament in tournaments %}
                        <tr onclick="window.location.href='{{ path('fixtures', {'idTournament': tournament.id}) }}'">
                            <td>{{ tournament.name }}</td>
                            <td>{{ tournament.location }}</td>
                            <td>{{ tournament.surfaceType }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/bundles/app/js/script.js') }}"></script>
{% endblock %}

